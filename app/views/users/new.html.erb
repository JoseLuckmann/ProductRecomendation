<div class="container mb-5">
    <div class="card mx-auto mt-5 pb-3 shadow rounded" style="width: 25rem;">
      <div class="card-body">
        <h4 class="card-title">Cadastro</h4>
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-group">
            <%= f.label :username, class: 'control-label' %><br>
            <%= f.text_field :username, autofocus: true, class: 'form-control' %><br>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'control-label' %><br>
            <%= f.password_field :password, class: 'form-control' %><br>
          </div>
          <%= f.submit "Cadastro", class: 'btn btn-warning w-100 shadow btn-sm rounded' %>
        <% end %>     
      </div>
    </div>
  </div> 