



<div class="container my-5">
  <div class="row">   
    <div class="col-md-3">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, height: "200px"%>
      <% end %>
    </div>

    <div class="col-md-4">
      <h6 class="font-weight-bold"><%= @product.name %>
      </h6>
      <p>
        <i class="fas fa-star text-warning"></i>
        <i class="fas fa-star text-warning"></i>
        <i class="fas fa-star text-warning"></i>
        <i class="fas fa-star text-warning"></i>
        <i class="fas fa-star-half-alt text-warning"></i>
      </p>

      <div class="dropdown-divider mt-3"></div>
      <p class="mb-0">
        <span class="text-danger font-weight-bold"><%= number_to_currency(@product.price) %></span>
      </p>     

      <div class="dropdown-divider mt-3"></div>
      <p class="text-success font-weight-bold"><%= @product.category %></p>     
      <p class="ml-n3">
        <%= @product.description %>
      </p> 
    </div> 

    
    <div class="col-md-4 text-center">
      <div class="card shadow rounded float-md-right" >
        <div class="card-body">          
          <p class="mb-0">
            <span class="text-danger font-weight-bold"><%= number_to_currency(@product.price) %></span>
          </p>
          <button type="button" class="btn btn-outline-warning btn-sm btn-block mt-3" onclick='addToCart(<%= @product.to_json.html_safe %>, "<%= url_for(@product.image) %>")'>
            <i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho
          </button>           
        </div>
      </div> 
    </div> 
  </div> 
</div> 